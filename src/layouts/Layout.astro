---
import Container from '../components/Container.astro';
const {backgroundColor = "--background-color-page1", textColor, title} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Get high-impact bankable digital marketing results for your business via our award-winning SEO, Content Marketing, and PPC, and Website Development." />
		<meta name="viewport" content="width=device-width" />
		<meta title={title} />
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<meta name="theme-color" content="#000000"/>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link href="https://assets.calendly.com/assets/external/widget.css" rel="stylesheet">
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@600&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body style=`background: var(${backgroundColor}); color:${textColor}`>
		<main>
			<Container>
				<slot/>
		</Container>
		</main>

	</body>
</html>
<script src="https://assets.calendly.com/assets/external/widget.js" type="text/javascript" async></script>
<script type="text/javascript">window.onload = function() { Calendly.initBadgeWidget({ url: 'https://calendly.com/stefanovidmarmarketingagency/free-website-consultation', text: 'Free Consultation', color: '#ff6584', textColor: '#ffffff', branding: undefined }); }</script>
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-element-bundle.min.js"></script>